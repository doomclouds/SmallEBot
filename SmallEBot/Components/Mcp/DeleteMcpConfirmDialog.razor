<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">删除 MCP</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">确定要删除 MCP「@Name」吗？删除后无法恢复。</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="@Cancel">取消</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@Confirm">删除</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string Name { get; set; } = "";

    private void Cancel() => MudDialog.Cancel();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
