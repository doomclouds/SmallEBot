<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Delete MCP</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">Are you sure you want to delete MCP「@Name」? This cannot be undone.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@Confirm">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string Name { get; set; } = "";

    private void Cancel() => MudDialog.Cancel();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
