@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent><MudText Typo="Typo.h6">Add Skill</MudText></TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_id" Label="Id (folder name)" Variant="Variant.Outlined" Required RequiredError="Required" Class="mb-2" />
        <MudTextField @bind-Value="_name" Label="Name" Variant="Variant.Outlined" Required RequiredError="Required" Class="mb-2" />
        <MudTextField @bind-Value="_description" Label="Description" Variant="Variant.Outlined" Required RequiredError="Required" Lines="2" Class="mb-2" />
        <MudTextField @bind-Value="_body" Label="Skill content (SKILL.md body, optional)" Variant="Variant.Outlined" Lines="8" Class="mb-2" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@Submit">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    private string _id = "";
    private string _name = "";
    private string _description = "";
    private string _body = "";

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(_id) || string.IsNullOrWhiteSpace(_name) || string.IsNullOrWhiteSpace(_description))
        {
            Snackbar.Add("Please fill Id, name and description.", Severity.Warning);
            return;
        }
        var bodyOut = string.IsNullOrWhiteSpace(_body) ? "" : _body.Trim();
        MudDialog.Close(DialogResult.Ok((_id.Trim(), _name.Trim(), _description.Trim(), bodyOut)));
    }
}
