<MudDialog>
    <TitleContent><MudText Typo="Typo.h6">Delete Skill</MudText></TitleContent>
    <DialogContent>
        <MudText>Are you sure you want to delete Skill「@Id」? This cannot be undone.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@Confirm">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string Id { get; set; } = "";

    private void Cancel() => MudDialog.Cancel();
    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
