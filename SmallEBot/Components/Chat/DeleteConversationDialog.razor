@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Delete conversation</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">Are you sure you want to delete this conversation? This cannot be undone.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Confirm">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
