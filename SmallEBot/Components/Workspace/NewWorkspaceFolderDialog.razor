@inject IWorkspaceService WorkspaceService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>New folder</TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_path" Label="Path (relative to workspace)" Placeholder="e.g. src or scripts/utils" Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    private string _path = "";

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var path = _path?.Trim() ?? "";
        if (string.IsNullOrEmpty(path))
        {
            Snackbar.Add("Path is required.", Severity.Warning);
            return;
        }
        try
        {
            await WorkspaceService.CreateDirectoryAsync(path);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
        }
    }
}
