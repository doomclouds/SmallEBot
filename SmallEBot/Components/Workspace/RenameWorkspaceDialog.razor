@inject IWorkspaceService WorkspaceService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>Rename</TitleContent>
    <DialogContent>
        <MudText Typo="Typo.caption" Class="mb-2">@RelativePath</MudText>
        <MudTextField @bind-Value="_newName" Label="New name" Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Rename</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string RelativePath { get; set; } = "";
    [Parameter] public string CurrentName { get; set; } = "";

    private string _newName = "";

    protected override void OnParametersSet()
    {
        if (string.IsNullOrEmpty(_newName) && !string.IsNullOrEmpty(CurrentName))
            _newName = CurrentName;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var newName = _newName?.Trim() ?? "";
        if (string.IsNullOrEmpty(newName))
        {
            Snackbar.Add("New name is required.", Severity.Warning);
            return;
        }
        try
        {
            await WorkspaceService.RenameAsync(RelativePath, newName);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
        }
    }
}
