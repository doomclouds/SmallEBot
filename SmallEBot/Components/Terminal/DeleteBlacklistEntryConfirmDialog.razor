<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Remove blacklist entry</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">Remove the following entry from the command blacklist?</MudText>
        <MudText Typo="Typo.body2" Class="mt-2" Style="word-break: break-all;">@Entry</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@Confirm">Remove</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string Entry { get; set; } = "";

    private void Cancel() => MudDialog.Cancel();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
